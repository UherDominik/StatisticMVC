@model StatisticMVC.Models.StatisticCalculator

@{
    ViewData["Title"] = "Index";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InputText" class="control-label m-2">Insert numbers separated by spaces</label>
                <input asp-for="InputText" class="form-control" />
                <span asp-validation-for="InputText" class="text-danger"></span>
            </div>
            <br />
           
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
            <h6>Smalest number</h6>
            <p>@Model.MinNumber</p>
            <h6>Largest number</h6>
            <p>@Model.MaxNumber</p>
            <h6>Avarege number</h6>
            <p>@Model.AvgNumber</p>
            <h6>Sorted numbers</h6>
            <p>@Model.SortedNumbers</p>
        </form>

    </div>
    
</div>


<div>
    <a asp-action="Index" class="btn btn-primary">New calculation</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
